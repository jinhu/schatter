= form_for @oauth_sample do |f|
  -if @oauth_sample.errors.any?
    #error_explanation
      %h2= "#{pluralize(@oauth_sample.errors.count, "error")} prohibited this oauth_sample from being saved:"
      %ul
        - @oauth_sample.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :tags
    = f.text_field :tags
  .actions
    = f.submit 'Save'
